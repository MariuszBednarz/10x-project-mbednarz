---
import Layout from "../layouts/Layout.astro";
import { ForgotPasswordForm } from "../components/auth/ForgotPasswordForm";
---

<Layout title="Zresetuj hasło - HosLU">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-primary">HosLU</h1>
        <p class="text-muted-foreground mt-2">Zresetuj hasło do swojego konta</p>
      </div>

      <ForgotPasswordForm client:load />

      <div class="text-center mt-4">
        <p class="text-sm text-muted-foreground">
          Pamiętasz hasło?{" "}
          <a href="/login" class="text-primary hover:underline font-medium"> Zaloguj się </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
