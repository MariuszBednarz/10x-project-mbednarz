---
import Layout from "../layouts/Layout.astro";
import { LoginForm } from "../components/auth/LoginForm";
---

<Layout title="Zaloguj się - HosLU">
  <div class="min-h-screen flex items-center justify-center bg-background px-4 py-8">
    <div class="w-full max-w-md">
      <div class="text-center mb-8">
        <h1 class="text-3xl font-bold text-primary">DoSzpitala</h1>
        <p class="text-muted-foreground mt-2">Zaloguj się do swojego konta</p>
      </div>

      <LoginForm client:load />

      <div class="text-center mt-4">
        <p class="text-sm text-muted-foreground">
          Nie masz konta?{" "}
          <a href="/register" class="text-primary hover:underline font-medium"> Zarejestruj się </a>
        </p>
      </div>
    </div>
  </div>
</Layout>
